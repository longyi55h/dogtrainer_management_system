<h2>パスワード忘れました？</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class='form-group'>
    <div class='col-md-4 col-lg-4'>
      <%= f.label :email , 'E-mail', class: 'control-label'%>
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <p>メールを送信してください。パスワードをリセットします。</p>
    <%= f.submit 'メール送信', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
