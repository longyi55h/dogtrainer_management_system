<h1>Dogs#new</h1>
<p>Find me in app/views/dogs/new.html.erb</p>
<%= form_for @dog, html: { class: 'form-horizontal' } do |f| %>

    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class='form-group'>
                <img src="http://placehold.jp/150x150.png?text=犬の画像" class="thumbnail">
                <%= f.label :dog_image_path, '画像登録', class: 'control-label btn btn-primary' %>
                <%= image_tag @dog.dog_image_path.thumb.url if @dog.dog_image_path? %>
                <%= f.file_field :dog_image_path, class: 'fileInput', style: 'display:none' %>
                <%= f.hidden_field :dog_image_path_cache %>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class='form-group'>
                <%= f.label :name, 'オーナー：', class: 'control-label' %>
                <div>
                    <%= f.fields_for :owner do |owner_form| %>
                        <%= owner_form.text_field :owner_lastname, class: 'form-control' %>
                        <%= owner_form.text_field :owner_firstname, class: 'form-control' %>
                    <% end %>
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '名前：', class: 'control-label' %>
                <div>
                    <%= f.text_field :dog_name, class: 'form-control col-sm-4' %>
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '犬種：', class: 'control-label' %>
                <div>
                    <%= f.text_field :dog_breed, class: 'form-control' %>
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '生年月日：', class: 'control-label' %>
                <div>
                    <%= f.date_field :dog_birthday, class: 'form-control' %>
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '食事タイプ：', class: 'control-label' %>
                <div>
                    <%= f.select :food_type, { "ドッグフード" => "ドッグフード", "手作り食" => "手作り食", "生食" => "生食", "その他" => "その他" }, { include_blank: true }, { class: 'form-control' } %>
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '食事回数/1日：', class: 'control-label'%>
                <div>
                    <%= f.select :food_times, (1..9), { include_blank: true }, { class: 'form-control' } %>
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '好きなおやつ：', class: 'control-label' %>
                <div>
                    <%= f.text_field :favorite_snack1, class: 'form-control' %>
                    <%= f.text_field :favorite_snack2, class: 'form-control' %>
                    <%= f.text_field :favorite_snack3, class: 'form-control' %>
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '好きなおもちゃ：', class: 'control-label' %>
                <div>
                    <%= f.text_field :favorite_toy1, class: 'form-control' %>
                    <%= f.text_field :favorite_toy2, class: 'form-control' %>
                    <%= f.text_field :favorite_toy3, class: 'form-control' %>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class='form-group'>
                <%= f.label :name, '散歩回数/1日：', class: 'control-label' %>
                <div>
                    <%= f.select :dogwalk_times, (1..9), { include_blank: true }, { class: 'form-control' } %> 回
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '散歩時間/1回：', class: 'control-label' %>
                <div>
                    <%= f.select :dogwalk_hours, (1..9), { include_blank: true }, { class: 'form-control' } %> 時間
                </div>
            </div>
            <p>性格：</p>
            <div class='form-group'>
                <%= f.label :name, '人への興味・反応：', class: 'control-label' %>
                <div>
                    <%= f.radio_button :character1, 'A' %> A
                    <%= f.radio_button :character1, 'B' %> B
                    <%= f.radio_button :character1, 'C' %> C
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '好奇心：', class: 'control-label' %>
                <div>
                    <%= f.radio_button :character2, 'A' %> A
                    <%= f.radio_button :character2, 'B' %> B
                    <%= f.radio_button :character2, 'C' %> C
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '服従心：', class: 'control-label' %>
                <div>
                    <%= f.radio_button :character3, 'A' %> A
                    <%= f.radio_button :character3, 'B' %> B
                    <%= f.radio_button :character3, 'C' %> C
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '人との協調性：', class: 'control-label' %>
                <div>
                    <%= f.radio_button :character4, 'A' %> A
                    <%= f.radio_button :character4, 'B' %> B
                    <%= f.radio_button :character4, 'C' %> C
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '人への愛情表現：', class: 'control-label' %>
                <div>
                    <%= f.radio_button :character5, 'A' %> A
                    <%= f.radio_button :character5, 'B' %> B
                    <%= f.radio_button :character5, 'C' %> C
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '適応能力：', class: 'control-label' %>
                <div>
                    <%= f.radio_button :character6, 'A' %> A
                    <%= f.radio_button :character6, 'B' %> B
                    <%= f.radio_button :character6, 'C' %> C
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '興奮性：', class: 'control-label' %>
                <div>
                    <%= f.radio_button :character7, 'A' %> A
                    <%= f.radio_button :character7, 'B' %> B
                    <%= f.radio_button :character7, 'C' %> C
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '集中力：', class: 'control-label' %>
                <div>
                    <%= f.radio_button :character8, 'A' %> A
                    <%= f.radio_button :character8, 'B' %> B
                    <%= f.radio_button :character8, 'C' %> C
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '病歴・アレルギー：', class: 'control-label' %>
                <div>
                    <%= f.text_field :clinical_history1, class: 'form-control' %>
                    <%= f.text_field :clinical_history2, class: 'form-control' %>
                    <%= f.text_field :clinical_history3, class: 'form-control' %>
                    <%= f.text_field :clinical_history4, class: 'form-control' %>
                    <%= f.text_field :clinical_history5, class: 'form-control' %>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-4">
            <div class='form-group'>
                <%= f.label :name, "コマンド言語：", class: 'control-label' %>
                <div>
                    <%= f.text_field :command_language, class: 'form-control' %>
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, "基本コマンド：", class: 'control-label' %>
                <div>
                    <label class='checkbox-inline'>
                        <%= f.check_box :basic_command1, :as => :boolean %>おすわり
                    </label>
                    <label class='checkbox-inline'>
                        <%= f.check_box :basic_command2, :as => :boolean %>ふせ　
                    </label>
                    <label class='checkbox-inline'>
                        <%= f.check_box :basic_command3, :as => :boolean %>まて
                    </label>
                </div>
            </div>
            <div class='form-group'>
                <label class='checkbox-inline'>
                    <%= f.check_box :basic_command4, :as => :boolean %>おいで　
                </label>
                <label class='checkbox-inline'>
                    <%= f.check_box :basic_command5, :as => :boolean %>たって
                </label>
                <label class='checkbox-inline'>
                    <%= f.check_box :basic_command6, :as => :boolean %>ついて
                </label>
            </div>
            <div class='form-group'>
                <%= f.label :name, '応用コマンド：', class: 'control-label' %>
                <div>
                    <%= f.text_field :applied_command1, class: 'form-control' %>
                    <%= f.text_field :applied_command2, class: 'form-control' %>
                    <%= f.text_field :applied_command3, class: 'form-control' %>
                    <%= f.text_field :applied_command4, class: 'form-control' %>
                    <%= f.text_field :applied_command5, class: 'form-control' %>
                </div>
            </div>
            <div class='form-group'>
                <%= f.label :name, '備考：', class: 'control-label' %>
                <div>
                    <%= f.text_area :notes, :size => '60x10', class: 'form-control' %>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-lg-4">
            <div class='form-group'>
                <%= f.submit '新規登録', class: 'btn btn-primary' %>
                <%= link_to 'キャンセル', :back, class: 'btn btn-primary' %>
            </div>
        </div>
    </div>
<% end %>